<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- NOTE: EditTextPreference accepts EditText attributes. -->
    <!-- NOTE: EditTextPreference's summary should be set to its value by the activity code. -->
    <EditTextPreference
        android:key="@string/preference_location_key"
        android:title="@string/preference_location_title"
        android:defaultValue="@string/preference_location_default"
        android:selectAllOnFocus="true"
        android:inputType="textCapWords"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1" />

    <ListPreference
        android:key="@string/preference_tunits_key"
        android:title="@string/preference_tunits_title"
        android:entries="@array/preferences_tunits_entries_keys"
        android:entryValues="@array/preferences_tunits_entries_values"
        android:defaultValue="@string/preference_tunits_default" />

</PreferenceScreen>
